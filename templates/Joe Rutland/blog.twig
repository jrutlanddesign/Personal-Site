{{ include('./sections/header.twig') }}
<section class="blog-container">
    <section id="blogHeader">
        <h1>{{page.title}}</h1>
        <p>{{page.date}}</p>
        
        <div class="tags">
            {% for tag in page.tags %}
                <p><a href="{{ROOT ~ 'blog/tag/' ~ tag|get_link}}">{{tag}}</a></p>
            {% endfor %}
        </div>
    </section>

    <div class="markdown-content">{{page.markdown|markdown}}</div>
</section>

