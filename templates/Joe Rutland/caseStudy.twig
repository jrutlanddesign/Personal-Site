{{ include('./sections/header.twig') }}
<section class="blog-container">
    <section id="blogHeader">
        <h1>{{page.title}}</h1>
        <h2>{{page.tag_line}}</h2>

        <div class='tools'>
            <h3>Tools:</h3>
            <ul>
            {% for tool in page.tools %}
                <li>{{tool}}</li>
            {% endfor %}
            </ul>
        </div>
        
    </section>

    {% for paragraph in page.body_text %}
        <p>{{paragraph|raw}}</p>
    {% endfor %}

    <div class="breakimg">{{page.images[0]|raw}}</div>

</section>
{{ include('./sections/footer.twig') }}