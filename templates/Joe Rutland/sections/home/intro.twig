<section id="{{section.name}}">
    <h1>{{section.heading_text}}</h1>
    <h2>{{section.sub_text}}<br>{{section.availability | raw}}</h2>

    <div class="social-container">
        <div class="wrapper">
            <div class="social">
                {% for social in site.social %}
                    <a href="{{social.link}}" target="_blank" title="{{social.name}}">{{ social.icon | raw}}</a>
                {% endfor %}
            </div>
        </div>
    </div>
</section>